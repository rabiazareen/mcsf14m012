<body>
   

    <!-- Full Page Image Background Carousel Header -->
    <header id="myCarousel" class="carousel slide" style="height:450px;width:1000px;margin-left:200px;margin-right:200px;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Set the first background image using inline CSS below. -->
                <div class="fill" style="background-image: url('/Images/Img1.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Get it Easy</h2>
                </div>
            </div>
            <div class="item">
                <!-- Set the second background image using inline CSS below. -->
                <div class="fill" style="background-image: url('/Images/imageshow1.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Stay Easy</h2>
                </div>
            </div>
            <div class="item">
                <!-- Set the third background image using inline CSS below. -->
                <div class="fill" style="background-image: url('/Images/im2.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Be Happy</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>

    </header>

   







        <script>
            $('.carousel').carousel({
                interval: 1000 //changes the speed
            })
        </script>

