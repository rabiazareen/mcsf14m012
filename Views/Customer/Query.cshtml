@{
    ViewBag.Title = "Query";
}
@{
    Layout = "~/Views/Shared/_LayoutC.cshtml";
}
@using GroceryStore.Models;
@model Query


<div class="container" style="margin-left:250px;margin-right:250px;">
    <div class="jumbotron" style="width:750px;">
        <center>
            <h2 style="color:black;">Query</h2>
        </center>
        <form class=" form-horizontal" role="form" method="post" action="/Customer/QueryR">;
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Name:</label>
                <div class="col-sm-10">
                    
                    @Html.TextBoxFor(Model=>Model.UName, new { id = "PName", @class = "form-control", placeholder = "Enter Name" });
                </div>
            </div>
            <br>
       
            <div class="form-group">
                <label class="control-label col-sm-2" for="Query">Question</label>
                <div class="col-sm-10">
                    
                    @Html.TextAreaFor(Model=>Model.Question, new { id = "Question", @class = "form-control", placeholder = "Enter Query" })
                </div>
            </div>
            
            <br />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>