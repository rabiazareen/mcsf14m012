@using GroceryStore.Models;
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    <link href="~/Content/themes/full-slider.css" rel="stylesheet" />


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <link href="~/Content/simple-sidebar.css" rel="stylesheet" />
    





    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
      

        .nav .div .div .img {
            height: 50%;
            display: inline-block;
            float: left;
        }

        h2 {
            font-family: Georgia;
            color: whitesmoke;
            font-weight: bolder;
            margin-left: 400px;
            margin-top: 20px;
            display: inline-block;
        }
        .footer {
        text-align:right;
        float:right;
                   }

    </style>

</head>
<body style="background-color: silver;">

    <div class="container-fluid" style="background-color: darkgrey; height: 80px; width: 100%">
        <img src="~/Images/logo0.gif" class=" img-circle" style="margin-left:20px;margin-bottom:10px;height:70px;width:80px;margin-top:10px;display:inline-block" />

        <h2 id="3" style="text-align:center;">Online Grocery Store</h2>

    </div>


    
    <nav class="navbar navbar-dark bj-primary" style="background-color:black">
        <div class=" container-fluid">

            <div>
                <ul class="nav navbar-nav">
                    <li class="nav-item "><a class=" nav-link" href="/Customer/Index" style="font-family: Verdana; color: whitesmoke; font-size: 18px; "><span class="glyphicon glyphicon-home"></span>Home</a></li>
                    <li class="nav-item "><a class="nav-link" href="/Customer/ViewProfile" style="font-family: Verdana; color: whitesmoke; font-size: 18px; ">ViewProfile</a></li>
                    <li class="nav-item "><a class="nav-link" href="/Customer/EditProfile" style="font-family: Verdana; color: whitesmoke; font-size: 18px;"><span class="glyphicon glyphicon-edit"></span>EditProfile</a></li>
                    <li class="nav-item "><a class="nav-link" href="/Customer/Query" style="font-family: Verdana; color: whitesmoke; font-size: 18px;"><span class="glyphicon glyphicon-envelope"></span>Query</a></li>
                    <li class="nav-item "><a class="nav-link" href="/Customer/Inbox" style="font-family: Verdana; color: whitesmoke; font-size: 18px;"><span class="glyphicon glyphicon-envelope"></span>Inbox</a></li>
                    
                    <li class="nav-item pull-right"><a class="nav-link" href="/Customer/SignOut" style="font-family: Verdana; color: whitesmoke; font-size: 18px;"><span class="glyphicon glyphicon-log-out"></span>SignOut</a></li>
                    
                    
                </ul>
                <form class="form-inline pull-right" >
                    <button type="button"><span class="glyphicon glyphicon-shopping-cart"></span>Cart:@((int)Session["cartcount"])</button>    
                </form>
            </div>
        </div>
    </nav>

        <div class=" col-md-3" id="wrapper" style="background-color:darkgrey;margin-bottom:60px;">

            <div id="sidebar-wrapper" style="background-color: darkgrey;">
                <ul class="sidebar-nav ">
                    <li class="sidebar-brand" >
                        <a href="#" style="font-size: 20px; font-weight: bolder;color:black">
                            Catogaries
                        </a>
                    </li>

                    @foreach (var c in (List<Category>)Session["Category"])
                    {
                        <li class="nav-item" style="font-size:15px;font-weight:bold;">
                            <a style="color:black;font-weight:100;" href="/Customer/Category/?id=@c.CId">@c.CName</a>
                        </li>
                    }

                </ul>
            </div>
        </div>

       



        @RenderBody()



    <footer>
        <div class="footer" style=" margin-bottom:0px; padding-bottom:0px;">
            <div class="row" style="background-color: darkgrey; ">
                <p style=" font-weight:bolder; color:whitesmoke; text-align:right;"><h4>&copy;Copy right online grocery store </h4></p>
            </div>
        </div>
    </footer>


    <script src="~/Scripts/jquery-1.8.2.intellisense.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
        <script src="~/Scripts/jquery.js"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
</body>
</html>